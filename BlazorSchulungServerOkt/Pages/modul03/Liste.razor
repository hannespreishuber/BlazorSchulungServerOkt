@page "/liste2"
<h3>Liste</h3>
<div class="row">
    <div class="col">
        <h3>Liste</h3>

        <div class="list-group">
            @for (int i = 0; i < 7; i++)
            {
                int x = i;
                <a href="#" class='list-group-item list-group-item-action ' 
                   @onclick:preventDefault
                   @onclick="@(()=>MyProperty=x)">
                    @DateTime.Now.AddDays(i).ToString("dddd")
                </a>
            }
        </div>
      
    </div>
</div>
<hr />
@MyProperty

@code {
    public int MyProperty { get; set; }

}
